{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Airyc",
  "scopeName": "source.airyc",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#keywords" },
    { "include": "#struct-definition" },
    { "include": "#function-definition" },
    { "include": "#function-call" },
    { "include": "#variable-declaration" },
    { "include": "#field-access" },
    { "include": "#type-annotation" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#punctuation" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.airyc",
          "match": "//.*$"
        },
        {
          "name": "comment.block.airyc",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.airyc",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.airyc",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.airyc",
          "match": "\\b(if|else|while|break|continue|return)\\b"
        },
        {
          "name": "keyword.other.airyc",
          "match": "\\b(fn|let|struct|import|attach)\\b"
        },
        {
          "name": "storage.modifier.airyc",
          "match": "\\b(const|mut)\\b"
        }
      ]
    },
    "struct-definition": {
      "patterns": [
        {
          "match": "\\b(struct)\\s+([A-Za-z_][A-Za-z0-9_]*)\\s*(?=\\{)",
          "captures": {
            "1": { "name": "keyword.other.airyc" },
            "2": { "name": "entity.name.type.struct.definition.airyc" }
          }
        }
      ]
    },
    "function-definition": {
      "patterns": [
        {
          "match": "\\b(fn)\\s+([a-z_][A-Za-z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "keyword.other.airyc" },
            "2": { "name": "entity.name.function.definition.airyc" }
          }
        },
        {
          "match": "\\b(attach)\\s+([a-z_][A-Za-z0-9_]*)\\s*(?=\\{)",
          "captures": {
            "1": { "name": "keyword.other.airyc" },
            "2": { "name": "entity.name.function.definition.airyc" }
          }
        }
      ]
    },
    "function-call": {
      "patterns": [
        {
          "match": "\\b([a-z_][A-Za-z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.call.airyc" }
          }
        }
      ]
    },
    "variable-declaration": {
      "patterns": [
        {
          "match": "\\b(let)\\s+([a-z_][A-Za-z0-9_]*)\\s*:",
          "captures": {
            "1": { "name": "keyword.other.airyc" },
            "2": { "name": "variable.other.declaration.airyc" }
          }
        }
      ]
    },
    "field-access": {
      "patterns": [
        {
          "match": "(?<=\\.|->)\\s*([a-z_][A-Za-z0-9_]*)",
          "captures": {
            "1": { "name": "variable.other.member.airyc" }
          }
        }
      ]
    },
    "type-annotation": {
      "patterns": [
        {
          "name": "storage.type.primitive.airyc",
          "match": "\\b(i32|f32|void)\\b"
        },
        {
          "match": "\\b(struct)\\s+([A-Za-z_][A-Za-z0-9_]*)",
          "captures": {
            "1": { "name": "storage.type.struct.keyword.airyc" },
            "2": { "name": "entity.name.type.struct.airyc" }
          }
        },
        {
          "match": "(\\*)\\s*(const|mut)\\b",
          "captures": {
            "1": { "name": "keyword.operator.pointer.airyc" },
            "2": { "name": "storage.modifier.airyc" }
          }
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.airyc",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.octal.airyc",
          "match": "\\b0[oO][0-7]+\\b"
        },
        {
          "name": "constant.numeric.float.airyc",
          "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.decimal.airyc",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.logical.airyc",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.comparison.airyc",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.arithmetic.airyc",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.assignment.airyc",
          "match": "="
        },
        {
          "name": "keyword.operator.access.airyc",
          "match": "(->|\\.)"
        },
        {
          "name": "keyword.operator.reference.airyc",
          "match": "&"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.airyc",
          "match": "[,;:]"
        },
        {
          "name": "punctuation.section.braces.airyc",
          "match": "[{}]"
        },
        {
          "name": "punctuation.section.brackets.airyc",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.section.parens.airyc",
          "match": "[()]"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.airyc",
          "match": "\\b[a-z_][A-Za-z0-9_]*\\b"
        },
        {
          "name": "entity.name.type.airyc",
          "match": "\\b[A-Z][A-Za-z0-9_]*\\b"
        }
      ]
    }
  }
}
