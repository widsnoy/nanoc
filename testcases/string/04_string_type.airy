fn printf(t: *const i8, ...);
fn puts(s: *const i8) -> i32;

fn main() -> i32 {
    // 字符串字面量的类型是 *const i8
    let msg: *const i8 = "Hello, airyc!";
    printf("String variable: %s\n", msg);
    
    // 直接使用字符串字面量
    printf("Direct string: %s\n", "This is a test");
    
    // 字符串可以作为函数参数
    puts("Using puts function");
    
    return 0;
}
